<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/saved_links_list_item_padding_horizontal"
    android:paddingRight="@dimen/saved_links_list_item_padding_horizontal" >
    <EditText
        android:id="@+id/save_dialog_link_url"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:hint="URL"
        android:text="https://"
        android:inputType="textUri" />
    <EditText
        android:id="@+id/save_dialog_link_annotation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:hint="Annotation" />

</LinearLayout>